<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.exkost.SecondFragment">

    <!--TextView and Button displayed in Second Fragment -->

    <EditText
        android:id="@+id/regisPassword"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:background="@color/light"
        android:ems="10"
        android:inputType="textPassword"
        android:layout_marginTop="260dp"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/regisNama"
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:background="@color/light"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:background="@color/light"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textColor="#1e1f29"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="70dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#1e1f29"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="70dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#1e1f29"
        android:layout_marginTop="240dp"
        android:layout_marginLeft="70dp" />

    <Button
        android:id="@+id/buttonDaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Daftar"
        android:textColor="#1e1f29"
        android:textSize="17sp"
        android:theme="@style/buttonstyle2"
        android:height="50dp"
        android:width="120dp"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="240dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="___EXKOST___"
        android:textColor="#1e1f29"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="150dp" />

</RelativeLayout>
